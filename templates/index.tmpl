<html>
  <head>
    <title>futball</title>
    <link href="css/styles.css" rel="stylesheet">
    <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
    <script type="text/javascript" src="js/angular.min.js"></script>
    <script type="text/javascript" src="js/angular-route.min.js"></script>
    <script type="text/javascript" src="js/angular-file-upload.min.js"></script>
    <script type="text/javascript" src="js/app.js"></script>
    <script type="text/javascript" src="js/services/api.js"></script>
    <script type="text/javascript" src="js/controllers/users.js"></script>
    <script type="text/javascript" src="js/controllers/cards.js"></script>
  </head>
  <body ng-app="futball-cards">
    <section class="wrapper" ng-controller="Cards" ng-init="initCards()">
      <input type="text" ng-model="playerName">
      <button class="button" ng-click="getCards()">Query</button>

      <div ng-repeat="card in cards" class="card-wrapper">
        <pre style="word-wrap: break-word;">{{ card }}</pre>
      </div>
    </section>
  </body>
</html>