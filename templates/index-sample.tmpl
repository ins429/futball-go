<html>
  <head>
    <title>futball</title>
    <link href="css/styles.css" rel="stylesheet">
    <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
    <script type="text/javascript" src="js/angular.min.js"></script>
    <script type="text/javascript" src="js/angular-route.min.js"></script>
    <script type="text/javascript" src="js/angular-file-upload.min.js"></script>
    <script type="text/javascript" src="js/app.js"></script>
    <script type="text/javascript" src="js/services/api.js"></script>
    <script type="text/javascript" src="js/controllers/users.js"></script>
    <script type="text/javascript" src="js/controllers/images.js"></script>
  </head>
  <body ng-app="futball-gifs">
    <header ng-controller="Users" ng-init="initUser()">
      <div class="user-menu-box float-right">
        <div class="user-menu-box-list">
          <button class="button" ng-click="signIn()" ng-if="!user"><i class="fa fa-facebook-square"></i>Sign in</button>
          <button class="button float-right" ng-if="user" ng-click="toggleUserMenu()"><i class="fa fa-user" style="margin:0"></i></button>
        </div>
        <div ng-show="showUserMenu">
          <div class="user-menu-box-list">
            <h5>{{ user.first_name }} {{ user.last_name }}</h5>
          </div>
          <div class="user-menu-box-list">
            <button class="button block float-right" ng-if="user" ng-click="editUser()"><i class="fa fa-edit"></i>Edit</button>
          </div>
          <div class="user-menu-box-list">
            <button class="button block float-right" ng-if="user" ng-click="signOut()"><i class="fa fa-sign-out"></i>Sign out</button>
          </div>
        </div>
      </div>
      <ng-include src="formUrl">
      </ng-include>
    </header>
    <section ng-view>
    </section>
  </body>
</html>